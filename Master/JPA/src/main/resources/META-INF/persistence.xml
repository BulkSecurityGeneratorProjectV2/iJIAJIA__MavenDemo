<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="ule.beta.mysql"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.username" value="chaxun" />
			<property name="hibernate.connection.password" value="chaxun" />
			<property name="hibernate.connection.url"
				value="jdbc:mysql://172.24.144.126:3306/post_item?useUnicode=true&characterEncoding=UTF-8" />
			<!-- hibernate 配置 -->
			<!-- 显示最终执行的sql -->
			<property name="hibernate.show_sql" value="true" />
			<!-- 格式化显示的sql -->
			<property name="hibernate.format_sql" value="false" />
			<property name="min-pool-size" value="20" />
			<property name="max-pool-size" value="50" />
			<property name="idle-timeout-minutes" value="5" />
			<property name="hibernate.connection.autocommit" value="false" />
			<property name="hibernate.jdbc.batch_size" value="30" />
			<property name="hibernate.max_fetch_depth" value="2" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
		</properties>
		<!-- <class>train.hard.jpa.entity.Item</class> -->
	</persistence-unit>
</persistence>